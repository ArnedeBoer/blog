<% extend('../layout') %>

<div id="register">
    <h2>Registreer</h2>
    <form id="new-user" action="/register" method="post">
        <div>
            <label>Username:</label><br>
            <input id="username" class="text-field" type="text" name="username"><br>
            <p class="err lengthCheck"></p>
        </div>
        <div>
            <label>Password:</label><br>
            <input id="first-password" class="text-field" type="password" name="first-password"><br>
            <p class="err lengthCheck"></p>
        </div>
        <div>
            <label>Check password:</label><br>
            <input id="second-password" class="text-field" type="password" name="second-password"><br>
            <p class="err lengthCheck"></p>
            <p class="err passwordCheck"></p>
        </div>
        <div>
            <label>Displayname:</label><br>
            <input id="displayname" class="text-field" type="text" name="displayname"><br>
            <p class="err lengthCheck"></p>
        </div>
        <p class="err registerCheck"></p>
        <input id="submit" type="submit" value="Registeer" disabled="true"><a href="/login">Of login</a>
    </form>
</div>
