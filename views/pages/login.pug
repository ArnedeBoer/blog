extends ../layout

block content
    #login
        h2 Login
        form#login-form(action='/login', method='post')
            label Username:
            br
            input#username.text-field(type='text', name='username')
            br
            label Password:
            br
            input#password.text-field(type='password', name='password')
            br
            p.err.loginCheck
            input#submit(type='submit', value='Login', disabled='true')
            a(href='/register') Registreer
